{
  "include": ["src/**/*", "dest/index.js"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true
  }
}